{
  "name": "remokontrol",
  "productName": "Remokontrol",
  "version": "1.0.0",
  "description": "Remote Control app for Roku Devices",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package-mac": "electron-packager . --overwrite --icon=assets/Icon.icns --prune=true --platform=darwin --arch=x64 --out=release-builds",
    "package-win": "electron-packager . --overwrite --asar=true --platform=win32 --arch=ia32 --prune=true --out=release-builds --version-string.CompanyName=StrongRobot"
  },
  "author": "Bryan Brunetti",
  "license": "ISC",
  "devDependencies": {
    "electron": "^1.8.3",
    "electron-packager": "^11.1.0"
  },
  "dependencies": {
    "request": "2.85.0",
    "electron-store": "1.3.0",
    "node-ssdp": "3.2.5",
    "xml2js": "0.4.19"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/deadkarma/controku.git"
  }
}
